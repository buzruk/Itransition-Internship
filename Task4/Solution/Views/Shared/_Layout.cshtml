<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Task4</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/Task4.styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>
<body>
  <header>
    <div class="container border-bottom" style="min-height:70px">
      <div class="row text-center">
        <div class="col-lg display-5 col-12 mt-auto">@ViewBag.Title</div>
        <div class="col-lg-2 col-12 h4 mt-auto order-lg-first">
          <a class="text-black text-decoration-none" asp-action="Index">Task 4</a>
        </div>
        @if (IsSectionDefined("LoginPartial"))
        {
          await RenderSectionAsync("LoginPartial", required: false);
        }
        else
        {
        <div class="col-lg-1 col-6 h4 mt-auto">
          <a class="text-black text-decoration-none" asp-action="Login">Login</a>
        </div>
        <div class="col-lg-1 col-6 h4 mt-auto">
          <a class="text-black text-decoration-none" asp-action="Register">Register</a>
        </div>
        }
      </div>
    </div>
  </header>
  <div class="container mt-2 ps-0 pe-0">
    <main role="main" class="pb-1">
      @RenderBody()
    </main>
  </div>
  <footer class="border-top footer text-muted text-center">
    @DateTime.Now.Year - buzurgmexrs@gmail.com
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
